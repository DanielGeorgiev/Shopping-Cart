{% extends 'base.html.twig' %}

{% block title%}Login{% endblock %}

{% block main %}
    <form name="authenticate" method="post" action="{{ path('security_login') }}">
        Username: <input type="text" name="_username" /> <br/>
        Password: <input type="password" name="_password" /> <br/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

        <input type="submit" value="Login"/>
        <small>Don't have an account? <a href="{{ path('user_register') }}">Register.</a></small>
    </form>
{% endblock main %}