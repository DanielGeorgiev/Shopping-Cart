{% extends 'base.html.twig' %}

{% block title %}
    Delete Product
{% endblock %}

{% block main %}
        <div class="container body-content span=8 offset=2">
            <div class="well">
                <form class="form-horizontal" action="{{ path('product_delete', {'id': product.id}) }}" method="POST">
                    <fieldset>
                        <legend>Delete Product</legend>

                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="product_name">Name *</label>
                            <div class="col-sm-4 ">
                                <input type="text" disabled value="{{ product.name }}" class="form-control" minlength="3" maxlength="255" required id="product_name" placeholder="Product Name"
                                       name="product[name]">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="product_desc">Description</label>
                            <div class="col-sm-6">
                                <input type="text" disabled value="{{ product.description }}" class="form-control" minlength="10" maxlength="255" id="product_desc" placeholder="Product Description"
                                       name="product[description]">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="product_price">Price *</label>
                            <div class="col-sm-4 ">
                                <input type="number" disabled value="{{ product.price }}" required class="form-control" id="product_price" placeholder="Product Price"
                                       name="product[price]">
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="product_category">Category *</label>
                            <div class="col-sm-4" >
                                <input type="text" disabled value="{{ product.category.name }}" class="form-control" minlength="10" maxlength="255" id="product_category" placeholder="Product Category"
                                       name="product[category]">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="product_quantity">Quantity *</label>
                            <div class="col-sm-4">
                                <input type="number" disabled value="{{ product.quantity }}" min="1" max="200" required class="form-control" id="product_quantity" placeholder="Product Quantity"
                                       name="product[quantity]">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-4">
                                <a class="btn btn-default" href="{{ path('home_page') }}">Cancel</a>
                                <button type="submit" class="btn btn-primary">Delete product</button>
                            </div>
                        </div>

                        {{ form_row(form._token) }}
                    </fieldset>
                </form>
            </div>
        </div>
{% endblock %}

